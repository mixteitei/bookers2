<main>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= render 'books/user', user:@user, book:@book %>
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format:'jpeg', class:"attachment user profile_image fallback", fallback:"no_image.jpg", size:"40x40" %>
                </td>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.following_user.count %></td>
                <td>フォロワー数: <%= user.follower_user.count %></td>
                <% if current_user != user %>
                    <% if current_user.following?(user) %>
                      <td><%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %></td>
                    <% else %>
                      <td><%= link_to 'フォローする', user_relationships_path(user.id), method: :post %></td>
                    <% end %>
                  <% else %>
                    <td></td>
                <% end %>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</main>