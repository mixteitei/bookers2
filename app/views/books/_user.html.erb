      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user,:profile_image, :fill, 63, 63, format:'jpeg', class:"attachment user profile_image fallback", fallback:"no_image.jpg", size:"63x63" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
            <tr>
              <th>follows</th>
              <th>
                <%= link_to follows_user_path(user.id) do %>
                  <%= user.following_user.count %>
                <% end %>
              </th>
            </tr>
            <tr>
              <th>followers</th>
              <th>
                <%= link_to followers_user_path(user.id) do %>
                  <%= user.follower_user.count %>
                <% end %>
              </th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <td><%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class:"btn btn-info" %></td>
            <% else %>
              <td><%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class:"btn btn-success" %></td>
            <% end %>
          <% else %>
            <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:book, local:true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field:title, class:"form-control book_title" %>
          </div>
          <div class="form-group">
            <label for="book_body">Opinion</label>
            <%= f.text_area:body, class:"form-control book_body" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
